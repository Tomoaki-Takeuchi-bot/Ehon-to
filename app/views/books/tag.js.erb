$(document).on 'turbolinks:load', ->
  $('#book-tags').tagit
    fieldName:   'category_list'
    singleField: true
  $('#book-tags').tagit()
  category_string = $("#category_hidden").val()
  try
    category_list = category_string.split(',')
    for tag in category_list
      $('#book-tags').tagit 'createTag', tag
  catch error
