<h1>本の詳細</h1>
<div class="nav justify-content-end">
  <%= link_to '一覧', books_path, class: 'nav-link' %>
</div>

<table class="table table-hover">
    <tr>
      <th>ID</th>
      <td><%= @book.id %></td>
    </tr>
    <tr>
      <th>本の名前</th>
      <td><%= @book.name %></td>
    </tr>
    <tr>
      <th>出版社</th>
      <td><%= @book.publisher %></td>
    </tr>
    <tr>
      <th>作者</th>
      <td><%= @book.author_name %></td>
    </tr>
    <tr>
      <th>価格</th>
      <td><%= @book.price %></td>
    </tr>
    <tr>
      <th>ISBN</th>
      <td><%= @book.isbn %></td>
    </tr>
</table>
<%= link_to '編集', edit_book_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', @book, method: :delete, data: { confirm: "本「#{@book.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
