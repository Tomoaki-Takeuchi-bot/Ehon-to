<div id="comments-form">
  <% if user_signed_in? %>
    <div class="d-comment__Box">
      <p class="d-comment__Title">コメント入力（５００文字以内）</p>
      <%= form_for :comment, url: book_comments_path(@book), remote: true do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, id: "comments_body", class: "form-control", rows: 20 %>
        </div>
      <%= f.submit "コメント", class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div id="comments">
      <%= render partial: 'comments/index' %>
    </div>
  <% end %>
</div>
